{
  "hosting": {
    "cleanUrls": false,
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.DS_Store"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/index.html",
        "destination": "/",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg|webp|js|map|wav|mp3|css|eot|otf|ttf|ttc|woff|gltf)",
        "headers" : [
          {
            "key" : "cache-control",
            "value" : "max-age=31536000"
          }
        ]
      },
      {
        "source" : "sw.js",
        "headers" : [
          {
            "key" : "cache-control",
            "value" : "no-cache"
          }
        ]
      },
      {
        "source" : "**/manifest.@(json|webapp)",
        "headers" : [
          {
            "key" : "cache-control",
            "value" : "max-age=7200"
          }
        ]
      },
      {
        "source" : "robots.txt",
        "headers" : [
          {
            "key" : "cache-control",
            "value" : "max-age=3600"
          }
        ]
      }
    ]
  }
}
